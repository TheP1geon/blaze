 {
  "name": "Blaze",
  "scopeName": "source.blaze",
  "fileTypes": ["bz"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "match": "#.*$",
          "name": "comment.line.hash"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "match": "\\b(func|let|if|else|for|while|return|type)\\b",
          "name": "keyword.control.blaze"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "match": "'[^']*'",
          "name": "string.quoted.single.blaze"
        },
        {
          "match": "\"[^\"]*\"",
          "name": "string.quoted.double.blaze"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "match": "\\b\\d+\\b",
          "name": "constant.numeric.blaze"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b",
          "name": "variable.blaze"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "match": "\\+|\\-|\\*|\\/|%|==|!=|<|>|<=|>=",
          "name": "keyword.operator.blaze"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "match": "[{}\\[\\];(),.:]",
          "name": "punctuation.blaze"
        }
      ]
    }
  }
}

